{
  "appId": "app.sumaris",
  "asar": "true",
  "directories": {
    "buildResources": "resources"
  },
  "files": [
    "assets/**/*",
    "build/**/*",
    "capacitor.config.*",
    "app/**/*",
    "LICENSE.txt"
  ],
  "linux": {
    "icon": "assets/icons/",
    "category": "Science",
    "target": ["AppImage", "deb"],
    "artifactName": "${name}-2.9.19.9-linux-${arch}.${ext}"
  },
  "nsis": {
    "artifactName": "${name}-2.9.19.9-windows-${arch}.${ext}",
    "allowElevation": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "assets/icon.ico",
    "license": "LICENSE.txt"
  },
  "win": {
    "target": "nsis",
    "icon": "assets/icon.ico"
  },
  "mac": {
    "category": "public.app-category.utilities",
    "target": "dmg"
  }
}
